<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ar.com.wolox.android.examples">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="ar.com.wolox.android.examples.TrainingApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <activity
            android:name="ar.com.wolox.android.examples.ui.RootActivity"
            android:noHistory="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="ar.com.wolox.android.examples.ui.login.LoginActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="ar.com.wolox.android.examples.ui.signup.SignUpActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="ar.com.wolox.android.examples.ui.home.HomeActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="ar.com.wolox.android.examples.ui.home.newDetails.NewDetailsActivity"
            android:screenOrientation="portrait" />
        
        <activity
            android:name="ar.com.wolox.android.examples.ui.viewpager.ViewPagerActivity"
            android:screenOrientation="portrait" />

    </application>

</manifest>
