<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background"
    android:orientation="vertical"
    tools:ignore="PrivateResource">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/vFragmentNews">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/vNewsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:background="@color/wolox_white"/>

        <com.melnykov.fab.FloatingActionButton
            android:id="@+id/vFloatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/static_spacing_medium_extra"
            fab:fab_colorNormal="@color/wolox_green"
            fab:fab_colorPressed="@color/wolox_white"
            fab:fab_colorRipple="@color/wolox_blue"
            fab:fab_shadow="false"
            android:src="@drawable/ic_news_list_off" />

    </RelativeLayout>

</LinearLayout>
