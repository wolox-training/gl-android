<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background"
    android:orientation="vertical"
    tools:ignore="PrivateResource">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/vHomeWoloxLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/main_logo_padding"
            android:layout_marginTop="@dimen/main_logo_padding"
            android:scaleType="fitStart"
            android:src="@drawable/wolox_logo"
            android:contentDescription="TODO" />

        <TextView
            android:id="@+id/vHomeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/main_logo_padding"
            android:layout_marginTop="@dimen/main_logo_padding"
            android:layout_marginBottom="@dimen/main_logo_padding"
            android:text="@string/home_title"
            android:textColor="@color/wolox_black"
            android:textSize="@dimen/font_large"
            android:textStyle="bold" />

    </LinearLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/vHomeTabLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vHomeViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
