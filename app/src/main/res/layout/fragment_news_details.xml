<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vNewsDetailsSwipeRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wolox_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/vNewsDetailsBackgroundNew"
                android:layout_width="match_parent"
                android:layout_height="@dimen/new_details_image_height" />

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/top_news_details_gradient">

                <ImageView
                    android:id="@+id/vNewsDetailsBackButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_large"
                    android:layout_marginTop="@dimen/spacing_large"
                    android:layout_marginEnd="@dimen/spacing_large"
                    android:layout_marginBottom="@dimen/spacing_large"
                    android:src="@drawable/ic_back" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="9dp"
                    android:layout_marginTop="@dimen/spacing_large"
                    android:layout_marginEnd="@dimen/spacing_large"
                    android:layout_marginBottom="@dimen/spacing_large"
                    android:maxLines="1"
                    android:text="@string/vNewsDetailsTopText"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textSize="@dimen/font_medium_extra"
                    android:textStyle="bold"
                    android:verticalScrollbarPosition="defaultPosition" />

            </androidx.appcompat.widget.Toolbar>

        </FrameLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_tiny"
                android:layout_marginEnd="@dimen/spacing_tiny">

                <ImageView
                    android:id="@+id/vStyleTop"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacing_big"
                    tools:ignore="MissingConstraints" />

                <ImageView
                    android:id="@+id/vStyleTitle"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacing_medium_more"
                    app:layout_constraintTop_toBottomOf="@+id/vNewDetailsTitle"
                    tools:ignore="MissingConstraints" />


                <ImageView
                    android:id="@+id/vNewsDetailsEmotionImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/static_spacing_big"
                    android:layout_marginBottom="@dimen/static_spacing_big"
                    android:contentDescription="@string/like_item"
                    android:src="@drawable/ic_like_selector_large"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/vNewDetailsTextInformation"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/vNewDetailsTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_large"
                    android:layout_marginEnd="@dimen/spacing_medium_more"
                    android:ellipsize="end"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textSize="@dimen/font_huge"
                    android:textStyle="bold"
                    android:verticalScrollbarPosition="defaultPosition"
                    app:layout_constraintBottom_toTopOf="@+id/vStyleTitle"
                    app:layout_constraintEnd_toStartOf="@+id/vNewDetailsTime"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/vStyleTop"
                    app:layout_constraintWidth_default="spread" />

                <TextView
                    android:id="@+id/vNewDetailsTextInformation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:ellipsize="end"
                    android:textSize="@dimen/font_medium_more"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/vStyleTitle" />


                <TextView
                    android:id="@+id/vNewDetailsTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_large"
                    android:layout_marginEnd="@dimen/spacing_large"
                    android:ellipsize="end"
                    android:textAlignment="textEnd"
                    app:layout_constraintBottom_toTopOf="@+id/vStyleTitle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/vNewDetailsTitle"
                    app:layout_constraintTop_toBottomOf="@+id/vStyleTop" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </LinearLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>