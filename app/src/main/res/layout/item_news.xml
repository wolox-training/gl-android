<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/vItemNewImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="2dp"
            android:background="@drawable/photo_circle"
            android:src="@color/wolox_blue"/>

        <ImageView
            android:id="@+id/vItemNewEmotionImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vItemNewTime"
            android:layout_alignParentEnd="true"
            android:padding="2dp"
            android:src="@drawable/ic_like_on" />

        <TextView
            android:id="@+id/vItemNewTextInformation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vItemNewTitle"
            android:layout_marginEnd="251dp"
            android:layout_toStartOf="@+id/vItemNewEmotionImage"
            android:layout_toEndOf="@+id/vItemNewImage"
            android:text="Informacion"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/vItemNewTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:text="Fecha"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/vItemNewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/vItemNewImage"
            android:text="Titulo"
            android:textColor="@color/wolox_black"
            android:textSize="20sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>