<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/vItemNewTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_medium_more"
        android:layout_marginTop="@dimen/spacing_medium_more"
        android:layout_marginBottom="@dimen/spacing_medium_more"
        android:layout_marginEnd="@dimen/spacing_medium_more"
        android:maxLines="1"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textSize="@dimen/font_medium_extra"
        android:textStyle="bold"
        android:verticalScrollbarPosition="defaultPosition"

        app:layout_constraintBottom_toTopOf="@+id/vMessage"
        app:layout_constraintEnd_toStartOf="@+id/vItemNewTime"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/vItemNewImage"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UnknownIdInLayout"
        tools:text="Title Example" />

    <TextView
        android:id="@+id/vItemNewTextInformation"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/spacing_medium_more"
        android:layout_marginTop="@dimen/spacing_medium_more"
        android:layout_marginBottom="@dimen/spacing_medium_more"
        android:layout_marginEnd="@dimen/spacing_medium_more"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="@dimen/font_medium_more"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/vNewEmotionImage"
        app:layout_constraintStart_toEndOf="@+id/vItemNewImage"
        app:layout_constraintTop_toBottomOf="@+id/vItemNewTitle"
        tools:text="Message Example and more example and more example and more example and final more example" />

    <ImageView
        android:id="@+id/vItemNewImage"
        android:layout_width="@dimen/spacing_largest_extra"
        android:layout_height="@dimen/spacing_largest_extra"
        android:layout_marginStart="@dimen/news_item_img_margin"
        android:layout_marginBottom="@dimen/spacing_medium_more"
        android:layout_marginTop="@dimen/spacing_medium_more"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintTop_toBottomOf="@+id/vItemNewTime"
        android:contentDescription="@string/photo_item" />


    <ImageView
        android:id="@+id/vNewEmotionImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_medium_more"
        android:layout_marginEnd="@dimen/spacing_medium_more"
        android:layout_marginBottom="@dimen/spacing_medium_more"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_like_off"
        android:contentDescription="@string/like_item" />

    <TextView
        android:id="@+id/vItemNewTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_medium_more"
        android:maxLines="2"
        android:textAlignment="textEnd"
        app:layout_constraintStart_toEndOf="@id/vItemNewTitle"
        app:layout_constraintBottom_toTopOf="@+id/vNewEmotionImage"
        app:layout_constraintEnd_toEndOf="@+id/vNewEmotionImage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:text="15 m" />


</androidx.constraintlayout.widget.ConstraintLayout>
